{
  "name": "alexa-typescript-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run test:coverage && gulp",
    "deploy": "npm run build && ask deploy",
    "deploy:lambda": "npm run build && ask deploy --target lambda",
    "deploy:local": "ask deploy --target skill --profile local",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "nodemon"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "coverageDirectory": ".coverage"
  },
  "author": "Mihail Cristian Dumitru",
  "license": "MIT",
  "dependencies": {
    "ask-sdk-core": "^2.8.0",
    "ask-sdk-model": "^1.28.0",
    "i18next": "^19.5.1",
    "i18next-sprintf-postprocessor": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^14.0.14",
    "@types/express": "^4.17.6",
    "@types/i18next": "^13.0.0",
    "@types/i18next-sprintf-postprocessor": "^0.2.0",
    "@types/jest": "^26.0.3",
    "express": "^4.17.1",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "nodemon": "^2.0.4",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.1"
  }
}
